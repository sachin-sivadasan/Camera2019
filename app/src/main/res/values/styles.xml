<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RationaleButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="RationaleButton.Blue" parent="RationaleButton">
        <item name="android:background">@color/colorLightBlue</item>
        <item name="android:foreground">?attr/colorControlHighlight</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="RationaleButton.White" parent="RationaleButton">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:foreground">@color/colorWhite</item>
        <item name="android:textColor">@color/colorLightBlue</item>
    </style>

    <style name="PermissionRationale">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout">@layout/permission_rationale</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>